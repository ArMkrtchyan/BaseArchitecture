<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppThemeLight" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="backgroundColor">@color/white</item>
        <item name="textColor">@color/black</item>
        <item name="buttonBackgroundColor">@color/colorAccent</item>
        <item name="buttonTextColor">@color/white</item>
        <item name="cardBackgroundColor">@color/black</item>
    </style>

    <style name="AppThemeDark" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccentDark</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="backgroundColor">@color/black</item>
        <item name="textColor">@color/white</item>
        <item name="buttonBackgroundColor">@color/colorAccentDark</item>
        <item name="buttonTextColor">@color/white</item>
        <item name="cardBackgroundColor">@color/colorAccentDark</item>
    </style>

</resources>