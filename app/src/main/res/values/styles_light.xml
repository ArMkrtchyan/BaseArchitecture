<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme light. -->
    <style name="AppThemeLight" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimaryLight</item>
        <item name="colorPrimaryDark">@color/colorPrimaryLight</item>
        <item name="colorAccent">@color/colorAccentLight</item>
        <item name="android:statusBarColor" tools:targetApi="l">@color/background_color_light</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowSoftInputMode">adjustPan</item>
        <item name="android:navigationIcon">@drawable/ic_back_light</item>
        <item name="InputStyle">@style/InputStyleLight</item>

        <!-- Regular text styles attributes-->
        <item name="Regular12Style">@style/Regular12StyleLight</item>
        <item name="Regular14Style">@style/Regular14StyleLight</item>
        <item name="Regular16Style">@style/Regular16StyleLight</item>
        <item name="Regular18Style">@style/Regular18StyleLight</item>
        <item name="Regular20Style">@style/Regular20StyleLight</item>
        <item name="Regular22Style">@style/Regular22StyleLight</item>

        <!-- Medium text styles attributes-->
        <item name="Medium12Style">@style/Medium12StyleLight</item>
        <item name="Medium14Style">@style/Medium14StyleLight</item>
        <item name="Medium16Style">@style/Medium16StyleLight</item>
        <item name="Medium18Style">@style/Medium18StyleLight</item>
        <item name="Medium20Style">@style/Medium20StyleLight</item>
        <item name="Medium22Style">@style/Medium22StyleLight</item>

        <!-- Bold text styles attributes-->
        <item name="Bold14Style">@style/Bold14StyleLight</item>
        <item name="Bold16Style">@style/Bold16StyleLight</item>
        <item name="Bold18Style">@style/Bold18StyleLight</item>
        <item name="Bold20Style">@style/Bold20StyleLight</item>
        <item name="Bold22Style">@style/Bold22StyleLight</item>
        <item name="Bold24Style">@style/Bold24StyleLight</item>
        <item name="Bold26Style">@style/Bold26StyleLight</item>
        <item name="Bold28Style">@style/Bold28StyleLight</item>

        <!-- divider's attributes-->
        <item name="dividerBackground">@color/divider_color_light</item>
        <item name="WindowBackgroundColor">@color/white</item>
        <item name="InputBackgroundColor">@color/inputBackgroundColorLight</item>
        <item name="CardBackgroundColor">@color/white</item>
        <item name="ButtonBackgroundColor">@color/buttonBackgroundColorLight</item>
        <item name="HintColor">@color/black_50</item>
        <item name="TextColor">@color/textColorForLight</item>
    </style>

    <style name="SplashStyle" parent="AppThemeLight">
        <item name="android:windowBackground">@color/white</item>
    </style>

    <style name="InputStyleLight">
        <item name="android:textSize">@dimen/text_size_3</item>
        <item name="android:textColor">@color/textColorForLight</item>
        <item name="android:fontFamily">@font/regular</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">@dimen/view_size_1</item>
        <item name="android:textColorHint">@color/black_50</item>
        <item name="android:background">@drawable/input_strock_background</item>
    </style>

    <style name="PrefixAppearance" parent="TextAppearance.AppCompat.Small">
        <item name="android:textSize">@dimen/text_size_4</item>
        <item name="android:fontFamily">@font/regular</item>
    </style>

    <style name="BottomSheetLight" parent="@style/Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/rounded_bottom_sheet_dialog</item>
    </style>

    <style name="AppThemeLightTransparent" parent="@style/AppThemeLight">
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="BottomSheetDialogThemeLight" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">true</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="bottomSheetStyle">@style/BottomSheetLight</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>

    <style name="CustomTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:gravity">center</item>
        <item name="android:width">100dp</item>
        <item name="android:fontFamily">@font/regular</item>
    </style>

    <style name="NumberPicker">
        <item name="android:colorControlNormal">@color/black_50</item>
        <item name="android:textColorPrimary">@android:color/black</item>
        <item name="android:fontFamily">@font/regular</item>
    </style>
</resources>